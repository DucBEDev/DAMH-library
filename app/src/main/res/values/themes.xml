<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Theme gốc -->
    <style name="Base.Theme.DAMHLibrary" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- 🎨 Màu chủ đạo -->
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Màu phụ -->
        <item name="colorSecondary">@color/teal_500</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Màu nhấn (tertiary) -->
        <item name="colorTertiary">@color/teal_200</item>
        <item name="colorOnTertiary">@color/black</item>

        <!-- Nền và text -->
        <item name="android:colorBackground">@color/gray_light</item>
        <item name="android:textColor">@color/text_primary</item>

        <!-- Thanh trạng thái -->
        <item name="android:statusBarColor">@color/teal_700</item>
        <item name="android:navigationBarColor">@color/teal_700</item>

    </style>

    <style name="Theme.DAMHLibrary" parent="Base.Theme.DAMHLibrary" />
</resources>
