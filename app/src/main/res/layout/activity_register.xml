<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        tools:context=".activity.RegisterActivity">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Back Button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:tint="#00695C" />

        <!-- Tiêu đề -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng ký tài khoản"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:contentDescription="Register Title"
            app:layout_constraintTop_toBottomOf="@id/btnBack"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vui lòng điền đầy đủ thông tin bên dưới"
            android:textSize="14sp"
            android:textColor="#666666"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp" />

        <!-- Họ và tên -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilFullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Họ và tên"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/teal_700"
            app:hintTextColor="@color/teal_700"
            app:errorEnabled="true"
            app:startIconDrawable="@drawable/ic_user"
            app:startIconTint="@color/teal_700"
            app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
            android:layout_marginTop="24dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtFullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName|textCapWords"
                android:textSize="16sp"
                android:contentDescription="Full Name Input" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Email -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/teal_700"
            app:hintTextColor="@color/teal_700"
            app:errorEnabled="true"
            app:startIconDrawable="@drawable/ic_email"
            app:startIconTint="@color/teal_700"
            app:layout_constraintTop_toBottomOf="@id/tilFullName">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:textSize="16sp"
                android:contentDescription="Email Input" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Mật khẩu -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mật khẩu"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/teal_700"
            app:hintTextColor="@color/teal_700"
            app:endIconMode="password_toggle"
            app:endIconTint="@color/teal_700"
            app:errorEnabled="true"
            app:startIconDrawable="@drawable/ic_lock"
            app:startIconTint="@color/teal_700"
            app:layout_constraintTop_toBottomOf="@id/tilEmail">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textSize="16sp"
                android:contentDescription="Password Input" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Xác nhận mật khẩu -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Xác nhận mật khẩu"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/teal_700"
            app:hintTextColor="@color/teal_700"
            app:endIconMode="password_toggle"
            app:endIconTint="@color/teal_700"
            app:errorEnabled="true"
            app:startIconDrawable="@drawable/ic_lock"
            app:startIconTint="@color/teal_700"
            app:layout_constraintTop_toBottomOf="@id/tilPassword">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textSize="16sp"
                android:contentDescription="Confirm Password Input" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Giới tính -->
        <TextView
            android:id="@+id/tvGenderLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giới tính"
            android:textSize="16sp"
            android:textColor="#666666"
            app:layout_constraintTop_toBottomOf="@id/tilConfirmPassword"
            app:layout_constraintStart_toStartOf="parent" />

        <RadioGroup
            android:id="@+id/rgGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/tvGenderLabel">

            <RadioButton
                android:id="@+id/rbMale"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nam"
                android:textSize="16sp"
                android:checked="true"
                app:buttonTint="@color/teal_700" />

            <RadioButton
                android:id="@+id/rbFemale"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nữ"
                android:textSize="16sp"
                app:buttonTint="@color/teal_700" />
        </RadioGroup>

        <!-- Ngày sinh -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilBirthDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ngày sinh (dd/MM/yyyy)"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/teal_700"
            app:hintTextColor="@color/teal_700"
            app:errorEnabled="true"
            app:startIconDrawable="@drawable/ic_calendar"
            app:startIconTint="@color/teal_700"
            app:layout_constraintTop_toBottomOf="@id/rgGender">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtBirthDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:focusable="false"
                android:clickable="true"
                android:textSize="16sp"
                android:contentDescription="Birth Date Input" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Địa chỉ -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Địa chỉ"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/teal_700"
            app:hintTextColor="@color/teal_700"
            app:errorEnabled="true"
            app:startIconDrawable="@drawable/ic_location"
            app:startIconTint="@color/teal_700"
            app:layout_constraintTop_toBottomOf="@id/tilBirthDate">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPostalAddress|textCapSentences"
                android:textSize="16sp"
                android:maxLines="3"
                android:contentDescription="Address Input" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Số điện thoại -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Số điện thoại"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/teal_700"
            app:hintTextColor="@color/teal_700"
            app:errorEnabled="true"
            app:startIconDrawable="@drawable/ic_phone"
            app:startIconTint="@color/teal_700"
            app:layout_constraintTop_toBottomOf="@id/tilAddress">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:textSize="16sp"
                android:contentDescription="Phone Input" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Số CMND/CCCD -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilIdCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Số CMND/CCCD"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/teal_700"
            app:hintTextColor="@color/teal_700"
            app:errorEnabled="true"
            app:startIconDrawable="@drawable/ic_card"
            app:startIconTint="@color/teal_700"
            app:layout_constraintTop_toBottomOf="@id/tilPhone">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtIdCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textSize="16sp"
                android:contentDescription="ID Card Input" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Checkbox điều khoản -->
        <CheckBox
            android:id="@+id/cbTerms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tôi đồng ý với điều khoản và chính sách"
            android:textSize="14sp"
            android:textColor="#666666"
            android:buttonTint="@color/teal_700"
            app:layout_constraintTop_toBottomOf="@id/tilIdCard" />

        <!-- Register Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Đăng ký"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="@color/teal_700"
            android:textColor="@android:color/white"
            app:cornerRadius="8dp"
            android:elevation="4dp"
            android:contentDescription="Register Button"
            app:layout_constraintTop_toBottomOf="@id/cbTerms"
            android:layout_marginTop="16dp" />

        <!-- Already have account -->
        <LinearLayout
            android:id="@+id/llLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintTop_toBottomOf="@id/btnRegister"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đã có tài khoản? "
                android:textSize="14sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/tvLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đăng nhập"
                android:textSize="14sp"
                android:textColor="@color/teal_700"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Login Link" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>