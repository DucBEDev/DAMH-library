<?xml version="1.0" encoding="utf-8"?>
<!-- Lưu vào res/layout/item_favorite_book.xml -->
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardBook"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Ảnh bìa sách -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardBookCover"
            android:layout_width="80dp"
            android:layout_height="120dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/ivBookCover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="#E0E0E0"
                android:src="@drawable/ic_book_placeholder"
                android:contentDescription="Book Cover" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Nút xóa yêu thích -->
        <ImageButton
            android:id="@+id/btnRemoveFavorite"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_favorite_filled"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Xóa khỏi yêu thích"
            app:tint="#E91E63"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Thông tin sách -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@id/cardBookCover"
            app:layout_constraintStart_toEndOf="@id/cardBookCover"
            app:layout_constraintEnd_toStartOf="@id/btnRemoveFavorite">

            <!-- Tên sách -->
            <TextView
                android:id="@+id/tvBookTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đắc Nhân Tâm"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Tác giả -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_person"
                    app:tint="#666666" />

                <TextView
                    android:id="@+id/tvAuthor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Dale Carnegie"
                    android:textSize="13sp"
                    android:textColor="#666666"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginStart="6dp" />

            </LinearLayout>

            <!-- Nhà xuất bản -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="6dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_business"
                    app:tint="#666666" />

                <TextView
                    android:id="@+id/tvPublisher"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="NXB Tổng Hợp TP.HCM"
                    android:textSize="13sp"
                    android:textColor="#666666"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginStart="6dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Divider -->
        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#EEEEEE"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/cardBookCover"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Thông tin bổ sung -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/divider">

            <!-- ISBN -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ISBN"
                    android:textSize="11sp"
                    android:textColor="#999999" />

                <TextView
                    android:id="@+id/tvISBN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="978-604-2-14559-3"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:fontFamily="monospace"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Ngày thêm -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="end">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_calendar"
                        app:tint="#999999" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đã thêm"
                        android:textSize="11sp"
                        android:textColor="#999999"
                        android:layout_marginStart="4dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvDateAdded"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15/10/2024"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>