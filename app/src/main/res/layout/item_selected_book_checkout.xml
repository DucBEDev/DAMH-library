<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:strokeWidth="1dp"
    app:strokeColor="#E0E0E0">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Bìa sách -->
        <ImageView
            android:id="@+id/ivBookCover"
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:scaleType="fitCenter"
            android:background="#F5F5F5"
            android:contentDescription="Bìa sách"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Thông tin sách -->
        <TextView
            android:id="@+id/tvBookTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tên sách rất dài có thể xuống dòng hai dòng"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="@id/ivBookCover"
            app:layout_constraintStart_toEndOf="@id/ivBookCover"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvBookAuthor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tác giả: Nguyễn Văn A"
            android:textSize="13sp"
            android:textColor="#666666"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvBookTitle"
            app:layout_constraintStart_toStartOf="@id/tvBookTitle"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvMaSach"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Mã sách: MS123456"
            android:textSize="12sp"
            android:textColor="#999999"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvBookAuthor"
            app:layout_constraintStart_toStartOf="@id/tvBookTitle"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Số lượng còn lại -->
        <TextView
            android:id="@+id/tvAvailable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Còn 5 cuốn"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/teal_700"
            app:layout_constraintBottom_toBottomOf="@id/ivBookCover"
            app:layout_constraintStart_toStartOf="@id/tvBookTitle" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>