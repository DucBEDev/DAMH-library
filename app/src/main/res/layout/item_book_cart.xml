<?xml version="1.0" encoding="utf-8"?>
<!-- Lưu vào res/layout/item_book_cart.xml -->
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardBook"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:strokeWidth="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Checkbox -->
        <CheckBox
            android:id="@+id/cbSelectBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/teal_700"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Book Cover Image -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardCover"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:layout_constraintStart_toEndOf="@id/cbSelectBook"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivBookCover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@color/gray_medium"
                android:src="@drawable/ic_book_placeholder"
                android:contentDescription="Book cover" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Book Title -->
        <TextView
            android:id="@+id/tvBookTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:text="Tên Sách"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="@id/cardCover"
            app:layout_constraintStart_toEndOf="@id/cardCover"
            app:layout_constraintEnd_toStartOf="@id/btnRemove" />

        <!-- Author -->
        <TextView
            android:id="@+id/tvAuthor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="8dp"
            android:text="Tác giả"
            android:textSize="13sp"
            android:textColor="@color/text_secondary"
            android:maxLines="1"
            android:ellipsize="end"
            android:drawableStart="@drawable/ic_person"
            android:drawablePadding="4dp"
            app:drawableTint="@color/teal_500"
            app:layout_constraintTop_toBottomOf="@id/tvBookTitle"
            app:layout_constraintStart_toEndOf="@id/cardCover"
            app:layout_constraintEnd_toStartOf="@id/btnRemove" />

        <!-- Publisher & ISBN -->
        <LinearLayout
            android:id="@+id/llBookInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/tvAuthor"
            app:layout_constraintStart_toEndOf="@id/cardCover"
            app:layout_constraintEnd_toStartOf="@id/btnRemove">

            <TextView
                android:id="@+id/tvPublisher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nhà xuất bản"
                android:textSize="12sp"
                android:textColor="@color/gray_dark"
                android:maxLines="1"
                android:ellipsize="end"
                android:drawableStart="@drawable/ic_business"
                android:drawablePadding="4dp"
                app:drawableTint="@color/gray_dark" />

            <TextView
                android:id="@+id/tvISBN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="ISBN: 123456789"
                android:textSize="11sp"
                android:textColor="@color/gray_dark"
                android:fontFamily="monospace" />

        </LinearLayout>

        <!-- Available Badge -->
        <LinearLayout
            android:id="@+id/llAvailableBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_available_badge"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/llBookInfo"
            app:layout_constraintStart_toEndOf="@id/cardCover">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_check_circle"
                app:tint="@color/success" />

            <TextView
                android:id="@+id/tvAvailableCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Còn 5 cuốn"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/success" />

        </LinearLayout>

        <!-- Remove Button -->
        <ImageButton
            android:id="@+id/btnRemove"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_delete"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Xóa khỏi giỏ"
            app:tint="@color/error"
            app:layout_constraintTop_toTopOf="@id/cardCover"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>