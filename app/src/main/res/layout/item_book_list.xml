<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    android:clickable="true"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Book Cover -->
        <ImageView
            android:id="@+id/ivBookCover"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_book"
            android:background="#E0E0E0"
            android:contentDescription="Book Cover"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Book Title -->
        <TextView
            android:id="@+id/tvBookTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tên sách"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@id/ivBookCover"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/ivBookCover" />

        <!-- Author -->
        <TextView
            android:id="@+id/tvBookAuthor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tác giả: Nguyễn Văn A"
            android:textSize="13sp"
            android:textColor="#666666"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="6dp"
            app:layout_constraintStart_toStartOf="@id/tvBookTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvBookTitle" />

        <!-- Category -->
        <TextView
            android:id="@+id/tvBookCategory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Thể loại: Văn học"
            android:textSize="12sp"
            android:textColor="#999999"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="@id/tvBookTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvBookAuthor" />

        <!-- Divider -->
        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@id/tvBookTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvBookCategory" />

        <!-- Quantity Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@id/tvBookTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintBottom_toBottomOf="@id/ivBookCover">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_book"
                app:tint="@color/teal_700" />

            <TextView
                android:id="@+id/tvQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Có sẵn: 15 cuốn"
                android:textSize="13sp"
                android:textColor="@color/teal_700"
                android:textStyle="bold"
                android:layout_marginStart="6dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBorrow"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Mượn"
                android:textSize="12sp"
                app:cornerRadius="6dp"
                app:backgroundTint="@color/teal_700"
                android:textColor="@android:color/white"
                style="@style/Widget.MaterialComponents.Button" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>