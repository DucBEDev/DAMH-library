<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Book Cover (lớn ở trên đầu) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardBookCover"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <ImageView
                android:id="@+id/ivBookCoverDetail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="#F5F5F5"
                android:src="@drawable/ic_book_placeholder"
                android:contentDescription="Bìa sách chi tiết" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Badge thể loại và ngôn ngữ (ngay bên dưới cover) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="start">

            <LinearLayout
                android:id="@+id/llCategoryBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_available_badge"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_check_circle"
                    app:tint="@color/success" />

                <TextView
                    android:id="@+id/tvCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="Thể loại: Văn học"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="@color/success" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llLanguageBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_available_badge"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:layout_marginStart="8dp">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_check_circle"
                    app:tint="@color/success" />

                <TextView
                    android:id="@+id/tvLanguage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="Ngôn ngữ: Tiếng Việt"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="@color/success" />

            </LinearLayout>

        </LinearLayout>

        <!-- Mô tả sách -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvDescriptionTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thông tin sách"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#212121" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginVertical="8dp" />

                <TextView
                    android:id="@+id/tvPublishDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày xuất bản: 01/01/2020"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvEdition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lần xuất bản: 2"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvPageCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số trang: 300"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvBookSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Khổ sách: 14x20 cm"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giá: 150.000 VNĐ"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvAuthorDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tác giả: Nguyễn Văn A"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvPublisherDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nhà xuất bản: Kim Đồng"
                    android:textSize="14sp"
                    android:textColor="#666666" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Danh sách sách thuộc đầu sách -->
        <TextView
            android:id="@+id/tvSubBooksTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Các sách thuộc đầu sách"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#212121" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSubBooks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:nestedScrollingEnabled="true" />

    </LinearLayout>
</ScrollView>