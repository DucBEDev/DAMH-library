<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp"
    app:strokeWidth="1dp"
    app:strokeColor="#E0E0E0">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Mã sách -->
        <TextView
            android:id="@+id/tvMaSach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã sách: S001234"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:fontFamily="monospace"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Tình trạng sách (Mới / Cũ) -->
        <LinearLayout
            android:id="@+id/llStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/tvMaSach"
            app:layout_constraintStart_toStartOf="parent">
            <!--            android:background="@drawable/bg_status_pill"-->

            <ImageView
                android:id="@+id/ivStatusIcon"
                android:layout_width="12dp"
                android:layout_height="12dp"
                app:tint="@color/success" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mới"
                android:textSize="11sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Trạng thái cho mượn -->
        <LinearLayout
            android:id="@+id/llBorrowStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_available_badge"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/tvMaSach"
            app:layout_constraintStart_toEndOf="@id/llStatus">

            <ImageView
                android:id="@+id/ivBorrowStatusIcon"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_check_circle"
                app:tint="@color/success" />

            <TextView
                android:id="@+id/tvBorrowStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Có thể mượn"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/success" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>